<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="216.67dp"
        android:layout_height="352.22dp"
        android:background="@drawable/gostore_theme_gallery_background" >
		
        <com.jiubang.ggheart.apps.gowidget.gostore.component.GoStoreDetailScrollView
            android:id="@+id/scrollItemView"
            android:layout_width="216.67dp"
            android:layout_height="wrap_content"
            android:scrollbars="none" >
		
            <RelativeLayout
                android:id="@+id/ItemDetailRelativeLayout"
                android:layout_width="216.67dp"
                android:layout_height="wrap_content"
                android:padding="13.33dp" >

                <TextView
                    android:id="@+id/contentNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="6.67dp"
                    android:singleLine="true"
                    android:text="@string/themestore_detail_basiccontent"
                    android:textColor="#8ec220"
                    android:textSize="13.33sp" />

                <TextView
                    android:id="@+id/contentDeveloperTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/contentNameTextView"
                    android:singleLine="true"
                    android:textColor="#1a1a1a"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/contentVersionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/contentDeveloperTextView"
                    android:singleLine="true"
                    android:textColor="#1a1a1a"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/contentPackageSizeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/contentVersionTextView"
                    android:singleLine="true"
                    android:textColor="#1a1a1a"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/contentDownloadCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/contentPackageSizeTextView"
                    android:singleLine="true"
                    android:textColor="#1a1a1a"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/contentUpateTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/contentDownloadCountTextView"
                    android:textColor="#1a1a1a"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/firstLineImageView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/contentUpateTimeTextView"
                    android:layout_marginBottom="13.33dp"
                    android:layout_marginTop="13.33dp"
                    android:background="@drawable/gostore_theme_detail_green_line" />

                <TextView
                    android:id="@+id/contentUpdateTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/firstLineImageView"
                    android:layout_marginBottom="6.67dp"
                    android:singleLine="true"
                    android:text="@string/themestore_detail_updatedcontent"
                    android:textColor="#1a1a1a"
                    android:textSize="13.33sp" />

                <TextView
                    android:id="@+id/contentUpdateTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/contentUpdateTitleTextView"
                    android:textColor="#7b7b7b"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/moreUpdateTextView"
                    android:layout_width="16.67dp"
                    android:layout_height="16.67dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/contentUpdateTextView"
                    android:layout_marginTop="6.67dp"
                    android:background="@drawable/gostore_theme_gallery_text_close"
                    android:gravity="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/secondLineImageView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/moreUpdateTextView"
                    android:layout_marginBottom="13.33dp"
                    android:layout_marginTop="13.33dp"
                    android:background="@drawable/gostore_theme_gallery_dot_line" />

                <TextView
                    android:id="@+id/contentDescriptionTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/secondLineImageView"
                    android:layout_marginBottom="6.67dp"
                    android:singleLine="true"
                    android:text="@string/themestore_detail_introduction"
                    android:textColor="#1a1a1a"
                    android:textSize="13.33sp" />

                <TextView
                    android:id="@+id/contentDescriptionTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/contentDescriptionTitleTextView"
                    android:textColor="#7b7b7b"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/moreDescriptionTextView"
                    android:layout_width="16.67dp"
                    android:layout_height="16.67dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/contentDescriptionTextView"
                    android:layout_marginTop="6.67dp"
                    android:background="@drawable/gostore_theme_gallery_text_close"
                    android:gravity="center"
                    android:visibility="gone" />
            </RelativeLayout>
        </com.jiubang.ggheart.apps.gowidget.gostore.component.GoStoreDetailScrollView>
    </LinearLayout>

</LinearLayout>