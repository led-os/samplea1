	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical">
	 <LinearLayout
        android:id="@+id/error_tips_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </LinearLayout>
