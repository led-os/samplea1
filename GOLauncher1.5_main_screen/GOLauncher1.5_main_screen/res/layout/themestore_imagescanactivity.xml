<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/themestore_main_list_item_selectorimg2"
  >
	<RelativeLayout
		android:id="@+id/imageScanContentRelativeLayout"
		android:layout_width="fill_parent"
 		android:layout_height="fill_parent"
	>
		<LinearLayout
			android:id="@+id/scrollLinearLayout"
			android:layout_width="fill_parent"
 			android:layout_height="fill_parent"
			android:orientation="vertical"
		>
		</LinearLayout>
	  	<include
		  	 android:id="@+id/loadImageProgressBar"
		  	 layout="@layout/themestore_btmprogress"
		   	 android:layout_width="wrap_content"
		  	 android:layout_height="wrap_content"
		  	 android:layout_centerInParent="true"
		  	 android:visibility="gone"	
	  	/>
	</RelativeLayout>
	<ImageView
		android:id="@+id/preImageView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft = "true"
		android:layout_centerVertical = "true"
		android:layout_marginLeft="5dip"
		android:background="@drawable/themestore_imagescan_preview_button"
		android:visibility="gone"
	/>
	<ImageView
		android:id="@+id/nextImageView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight = "true"
		android:layout_centerVertical = "true"
		android:layout_marginRight="5dip"
		android:background="@drawable/themestore_imagescan_next_button"
		android:visibility="gone"
	/>
	<RelativeLayout
		android:id="@+id/imageScanBottomRelativeLayout"
		android:layout_width="fill_parent"
 		android:layout_height="wrap_content"
 		android:layout_alignParentBottom="true"
	>
	<RelativeLayout
		android:id="@+id/imageScanBottomRelativeLayout2"
		android:layout_width="wrap_content"
 		android:layout_height="wrap_content"
 		android:layout_centerInParent="true"
 		android:paddingBottom="10dip">
		<ImageView
			android:id="@+id/inforPreImageView"
			android:layout_width="wrap_content"
 			android:layout_height="wrap_content"
 			android:layout_alignParentLeft="true"
 			android:layout_centerVertical="true"
			android:background="@drawable/themestore_imagescan_can_preview"
			android:visibility="gone"
		/>
		<TextView
			android:id="@+id/imageScanInforTextView"
			android:layout_width="wrap_content"
 			android:layout_height="wrap_content"
 			android:layout_toRightOf="@id/inforPreImageView"
 			android:layout_centerVertical="true"
 			android:layout_marginLeft="13.33dp"
 			android:layout_marginRight="13.33dp"
 			android:textColor="#000000"
 			android:textSize="16sp"
 			android:visibility="gone"
		/>
		<ImageView
			android:id="@+id/inforNextImageView"
			android:layout_width="wrap_content"
 			android:layout_height="wrap_content"
 			android:layout_toRightOf="@id/imageScanInforTextView"
 			android:layout_centerVertical="true"
			android:background="@drawable/themestore_imagescan_can_next"
			android:visibility="gone"
		/>
		
		<RelativeLayout 		    
		    android:layout_width="fill_parent"
		    android:paddingTop="4dip"
		    android:paddingBottom="4dip"
		    android:layout_height="48dip">
		<com.jiubang.ggheart.components.IndicatorView
		    android:id="@+id/indicator"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_centerInParent="true"
		    android:gravity="center"
		    android:background="@drawable/themestore_imagescan_bottom"
		    android:paddingLeft="20dip"
		    android:paddingRight="20dip"
		    />
		</RelativeLayout>
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>

