<?xml version="1.0" encoding="utf-8"?>
<com.jiubang.ggheart.appgame.base.downloadmanager.DownloadDeleteView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/apps_download_tips"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:id="@+id/mass_delete_buttom_layout"
            android:layout_width="fill_parent"
            android:layout_height="53dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/appsuninstall_bottombar"
            android:gravity="center" >

            <Button
                android:id="@+id/mass_delete_btn"
                android:layout_width="126.7dp"
                android:layout_height="37dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:background="@drawable/yzjz_white_button"
                android:text="@string/download_manager_btn_delete"
                android:textColor="@color/appgame_download_btn_black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/mass_delete_cancel_btn"
                android:layout_width="126.7dp"
                android:layout_height="37dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/yzjz_white_button"
                android:text="@string/cancel"
                android:textColor="#535353"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mass_delete_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/appsuninstall_topbar" >

            <!--
            <ImageView
                android:id="@+id/mass_delete_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/apps_uninstall_title_cancel" />

            -->

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/appsmanagement_line_right" />

            <TextView
                android:id="@+id/mass_delete_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/imageView3"
                android:text="@string/select_group_applications"
                android:textColor="#51B500"
                android:textSize="18.6sp" />

            <ImageView
                android:id="@+id/mass_delete_imageView_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10.3dp"
                android:background="@drawable/apps_uninstall_not_selected" />
        </RelativeLayout>

        <com.jiubang.ggheart.appgame.appcenter.component.PinnedHeaderListView
            android:id="@+id/mass_delete_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/mass_delete_buttom_layout"
            android:layout_below="@+id/mass_delete_title"
            android:background="@color/center_background"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/listline"
            android:dividerHeight="0.5dp"
            android:fadingEdge="none"
            android:scrollbarStyle="outsideOverlay"
            android:listSelector="@color/transparent_background"/>
    </RelativeLayout>

</com.jiubang.ggheart.appgame.base.downloadmanager.DownloadDeleteView>