<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="296dp"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/theme_paid_dialog_bg_head" >

        <TextView
            android:id="@+id/dialog_title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10.6dp"
            android:textColor="#454545"
            android:textSize="18.6dp" />
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/dialog_item1"
	    android:layout_width="match_parent"
        android:layout_height="66.6dp" 
        android:layout_below="@+id/dialog_title"
        android:gravity="center_vertical"
        android:background="@drawable/theme_paid_dialog_selector"
	    android:clickable="true">
	    <ImageView
	       android:layout_width="45dip"
	       android:layout_height="45dip"
	       android:layout_marginLeft="5dip"
	       android:background="@drawable/getjar_icon" />  
		<TextView
	       android:layout_width="match_parent"
	       android:layout_height="66.6dp"
	       android:layout_marginLeft="13.3dp"
	       android:gravity="center_vertical"
	       android:textColor="#6e6e6e"
	       android:text="@string/payment_list_item1"
	       android:textSize="16dp" />
	</LinearLayout> 

    <ImageView
        android:id="@+id/dialog_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_item1"
        android:background="@drawable/theme_paid_dialog_line" />

    <LinearLayout 
       	android:id="@+id/dialog_item2"
	    android:layout_width="match_parent"
        android:layout_height="66.6dp" 
        android:layout_below="@+id/dialog_line1"
        android:gravity="center_vertical"
        android:background="@drawable/theme_paid_dialog_selector"
	    android:clickable="true"
	    android:visibility="gone">
	    <ImageView
	        android:layout_width="45dip"
	        android:layout_height="45dip"
	        android:layout_marginLeft="5dip"
	        android:background="@drawable/appbilling_icon" />  
		<TextView
	        android:layout_width="match_parent"
	        android:layout_height="66.6dp"
	        android:gravity="center_vertical"
	        android:layout_marginLeft="13.3dp"
	        android:text="@string/payment_list_item2"
	        android:textColor="#6e6e6e"
	        android:textSize="16dp" />
	</LinearLayout>    

</RelativeLayout>