<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@color/message_center_listcontainer_bg"
    android:id="@+id/message_center_listcontainer"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/message_center_empty_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <ImageView
            android:id="@+id/message_center_nomsgimageview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/themestore_nodata_all" />

        <com.jiubang.ggheart.components.DeskTextView
            android:id="@+id/message_center_nomsgtextview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_center_nomsgimageview1"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:paddingTop="25dp"
            android:text="@string/themestore_no_data"
            android:textColor="#676767"
            android:textSize="16sp" />

        <com.jiubang.ggheart.components.DeskTextView
            android:id="@+id/message_center_nomsgtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_center_nomsgtextview2"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/themestore_back_to_try"
            android:textColor="#676767"
            android:textSize="13sp" />
    </RelativeLayout>

    <ListView
        android:visibility="gone"
        android:id="@+id/message_center_listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:divider="#00000000"
        android:layout_alignParentTop="true"
        android:cacheColorHint="#00000000" >
    </ListView>

</RelativeLayout>