<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" >
	<!-- 显示内容区域 -->
	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:gravity="center">
		<!-- 数据Loading图标 -->
		<ProgressBar android:id="@+id/data_loading_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateDrawable="@drawable/gorecomm_widget_loading_progress" />
		<!-- 提示信息 -->
		<TextView android:paddingTop="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:ellipsize="end" android:shadowDx="1.5" android:shadowDy="1.5" android:shadowRadius="1"
            android:singleLine="true" android:textColor="#707070" android:textSize="16.5sp" android:text="@string/gorecomm_loading_message"/>
	</LinearLayout>
</RelativeLayout>
       