<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/chosestore_bg"
  android:gravity="bottom|center_horizontal">
  <com.jiubang.ggheart.components.DeskTextView 
  	  android:layout_width="fill_parent"
  	  android:layout_height="47dp"
  	  android:paddingLeft="11dp"
  	  android:gravity="center_vertical"
  	  android:drawableLeft="@drawable/chosestore_icon"
  	  android:textColor="@android:color/black"
  	  android:text="@string/downDialog_title_select_market"
  	  android:textSize="15sp"
  	  android:background="@drawable/chosestore_top"
  	  android:clickable="true"
  	  />
  <GridView
      android:id="@+id/gridview"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:numColumns="3"
      android:stretchMode="columnWidth"
      android:gravity="center"
      android:paddingTop="13dp"
      android:listSelector="@android:color/transparent"
      />
</LinearLayout>