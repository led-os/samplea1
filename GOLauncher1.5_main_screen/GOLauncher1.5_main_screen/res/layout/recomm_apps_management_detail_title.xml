<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true" 
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/appgame_titlebar_bg" >

            <ImageView
                android:id="@+id/recomm_apps_management_detai_title_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:background="@drawable/app_center_icon_large"
                android:paddingLeft="10dp" />

            <ImageView
                android:id="@+id/recomm_apps_management_detai_title_back"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/recomm_apps_management_detai_title_logo"
                android:background="@drawable/apps_management_back_select"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:scaleType="center"
                android:src="@drawable/app_center_back" />

            <TextView
                android:id="@+id/recomm_apps_management_detai_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/recomm_apps_management_detai_title_search"
                android:layout_toRightOf="@+id/recomm_apps_management_detai_title_back"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="#393939"
                android:textSize="18.6sp" />

            <ImageView
                android:id="@+id/recomm_apps_management_detai_title_search"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="0dp"
                android:background="@drawable/apps_management_back_select"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:scaleType="center"
                android:src="@drawable/ui2_search" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>