<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50.67dip" 
    android:background="@drawable/appgame_titlebar_bg">
    
    <ImageView
        android:id="@+id/apps_management_title_back_iamge"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/apps_management_back_select"
        android:paddingRight="13dp"
        android:paddingLeft="13dp"
        android:layout_alignParentLeft="true"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:scaleType="center"
        android:src="@drawable/app_center_back" />

    <TextView
        android:id="@+id/apps_management_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/apps_management_title_back_iamge"
        android:layout_centerVertical="true"
        android:gravity="left"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="#393939"
        android:textSize="18.6sp" 
        android:ellipsize="end"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/apps_management_title_sort_button"/>

     <ImageView
        android:id="@+id/apps_management_title_sort_button" 
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:background="@drawable/apps_management_back_select"/>

</RelativeLayout>
