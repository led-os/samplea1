<?xml version="1.0" encoding="utf-8"?>
<com.jiubang.ggheart.apps.desks.diy.frames.preview.SenseLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ggheart="http://schemas.android.com/apk/res/com.gau.go.launcherex"
	android:id="@+id/screenlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	
    <com.jiubang.ggheart.apps.desks.diy.frames.preview.SenseWorkspace
		android:id="@+id/senseWorkspace"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    ggheart:cardRows="3"
	    ggheart:cardCols="3"
	    ggheart:backgroundColor="#7f000000"
	    ggheart:marginBottom="@dimen/cards_bottom_port"
	    ggheart:marginLeft="@dimen/cards_left_port"
	    ggheart:marginRight="@dimen/cards_right_port"
	    />
	<com.jiubang.ggheart.apps.desks.diy.frames.screen.ScreenIndicator
		android:id="@+id/screenIndicator"
		android:layout_width="fill_parent"
		android:layout_height="17dip"
		ggheart:darkImage="@drawable/normalbar"
		ggheart:lightImage="@drawable/lightbar"
		ggheart:dotWidth="24dip"
	/>
        	    
        <LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="@dimen/linearlayout_height"
		android:id="@+id/textlayout"
		android:background="@drawable/trash_bg_hover"
		android:layout_gravity="center|top"
		android:visibility="gone"
    >

    	<TextView
    		android:layout_width="fill_parent"
			android:layout_height="@dimen/text_height"
			android:text="@string/no_enough_room"
			android:gravity="center"
			android:textSize="15sp"
			android:textColor="#ffffff"
			android:shadowRadius="5"
			android:shadowDx="2"
    	/>
    </LinearLayout>
</com.jiubang.ggheart.apps.desks.diy.frames.preview.SenseLayout>