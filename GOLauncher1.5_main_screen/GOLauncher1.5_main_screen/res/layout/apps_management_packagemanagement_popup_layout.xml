<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    <RelativeLayout
        android:id="@+id/app_packagemenagement_popup_up_layout"        
      	android:layout_width="fill_parent"
    	android:layout_height="62dp"
    	android:background="@drawable/apps_packagemanagement_package_popup_up_bg">
    	<Button
            android:id="@+id/apps_packagemanagement_package_popup_up_operate"
            android:layout_width="130dp"
            android:layout_height="32dp"
            android:layout_marginBottom="10.5dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/update_detail_selector_new"
            android:layout_alignParentBottom="true"
            android:textColor="#FFFFFF"/>        
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/app_packagemenagement_popup_down_layout"        
      	android:layout_width="fill_parent"
    	android:layout_height="62dp"
    	android:background="@drawable/apps_packagemanagement_package_popup_down_bg"
    	android:visibility="gone">
    	<Button
            android:id="@+id/apps_packagemanagement_package_popup_down_operate"
            android:layout_width="130dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/update_detail_selector_new"
            android:textColor="#FFFFFF"/>        
    </RelativeLayout>
</RelativeLayout>