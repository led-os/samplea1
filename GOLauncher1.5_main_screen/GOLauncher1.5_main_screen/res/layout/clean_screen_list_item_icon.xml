<?xml version="1.0" encoding="utf-8"?>
<com.jiubang.ggheart.components.appmanager.ScanResultLIstViewItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip" >

        <ImageView
            android:id="@+id/icon_iamge"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dip" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:button="@drawable/common_checkbox_selector" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/checkbox"
            android:layout_toRightOf="@id/icon_iamge"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <com.jiubang.ggheart.components.DeskTextView
                android:id="@+id/icon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:singleLine="true"
                android:textColor="#343434"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <com.jiubang.ggheart.components.DeskTextView
                    android:id="@+id/memory_pss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#9D9D9D"
                    android:textSize="12sp" />

                <com.jiubang.ggheart.components.DeskTextView
                    android:id="@+id/install_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:singleLine="true"
                    android:textColor="#9D9D9D"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/desk_setting_item_view_gray_line" />
    </RelativeLayout>

</com.jiubang.ggheart.components.appmanager.ScanResultLIstViewItemView>