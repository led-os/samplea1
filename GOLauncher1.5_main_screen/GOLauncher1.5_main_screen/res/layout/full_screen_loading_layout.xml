<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ggheart="http://schemas.android.com/apk/res/com.gau.go.launcherex" 
    android:layout_width="match_parent" android:layout_height="match_parent">
	<!-- 显示内容区域 -->
	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:gravity="center">
		<!-- 数据Loading -->
		<com.jiubang.ggheart.components.GoProgressBar android:id="@+id/loading_progress" android:layout_width="fill_parent"
        	android:layout_height="fill_parent" android:gravity="center" ggheart:prossbar_color_selete="0" >
			<ProgressBar android:id="@+id/go_progressbar" android:layout_width="35dp" android:layout_height="35dp"
				android:visibility="visible" />
    	</com.jiubang.ggheart.components.GoProgressBar>
		<!-- 提示信息 -->
		<TextView android:id="@+id/loading_prompt_text" android:paddingTop="7dp" android:layout_width="wrap_content" android:shadowRadius="1"
		    android:layout_height="wrap_content" android:ellipsize="end" android:shadowDx="1.5" android:shadowDy="1.5" 
            android:singleLine="true" android:textColor="#000000" android:textSize="18sp" android:text="@string/gorecomm_loading_message"/>
	</LinearLayout>
</RelativeLayout>
       