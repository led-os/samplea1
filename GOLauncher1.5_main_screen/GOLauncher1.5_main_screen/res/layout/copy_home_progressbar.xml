<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true" >
    
    <ProgressBar
        android:id="@+id/appgame_default_start_loading_progressbar"
        android:layout_width="@dimen/appgame_startloading_progress_width"
        android:layout_height="@dimen/appgame_startloading_progress_height"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/appgame_startloading_progress_topmargin" />
    
    <TextView 
        android:id="@+id/loadingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appgame_default_start_loading_progressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/copying_home"/>

</RelativeLayout>