<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:layout_width="0dp"
        android:layout_height="69.33333dp" />

    <com.jiubang.ggheart.appgame.base.component.BurningIcon
        android:id="@+id/feature_iphonestyle_twocell_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.666667dp"
        android:layout_toRightOf="@+id/feature_iphonestyle_twocell_icon"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingTop="0dp" >

        <TextView
            android:id="@+id/feature_iphonestyle_twocell_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="170dp"
            android:padding="0dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#FF393939"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/feature_iphonestyle_twocell_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:gravity="center_vertical"
            android:padding="0dp"
            android:maxWidth="90dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#FF909090"
            android:textSize="12.5dp" />

        <TextView
            android:id="@+id/feature_iphonestyle_twocell_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="170dp"
            android:singleLine="true"
            android:padding="0dp"
            android:text=""
            android:textColor="#FF909090"
            android:textSize="12.5dp" />
    </LinearLayout>

    <Button
        android:id="@+id/feature_iphonestyle_twocell_download_btn"
        android:layout_width="65dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/appgame_install_btn_selector"
        android:focusable="false"
        android:gravity="center"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:singleLine="true"
        android:text=""
        android:textColor="#FF393939"
        android:textSize="10dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/feature_iphonestyle_twocell_progress"
        android:layout_width="62dp"
        android:layout_height="30.3dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text=""
        android:textColor="#FF787878"
        android:textSize="13sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/feature_iphonestyle_twocell_feature_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </ImageView>

</RelativeLayout>