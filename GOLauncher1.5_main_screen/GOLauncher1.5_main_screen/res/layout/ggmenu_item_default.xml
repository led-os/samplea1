<?xml version="1.0" encoding="utf-8"?>
<com.jiubang.ggheart.apps.desks.ggmenu.GGMenuItem
 	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	>
	
	<ImageView 
	    android:id="@+id/bottom_item_image"
	    android:layout_centerHorizontal="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	<ImageView 
	    android:id="@+id/screen_edit_info"
	    android:layout_toRightOf="@id/bottom_item_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/ggmenu_info"
		android:visibility="gone"/>
	
 	<com.jiubang.ggheart.components.DeskTextView
 		android:id="@+id/bottom_item_text"
    	android:layout_below="@id/bottom_item_image" 
		android:layout_centerHorizontal="true" 
		android:layout_width="fill_parent"
		android:layout_height="20dip" 
		android:textColor="#ff747474"
		android:textSize="13sp"
		android:singleLine="true"
		android:gravity="center_horizontal"/>
		  
</com.jiubang.ggheart.apps.desks.ggmenu.GGMenuItem>
